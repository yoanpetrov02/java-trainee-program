<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sirma.javacourse.chatserver.controllers.LauncherController">
    <children>
        <Button fx:id="startButton" layoutX="125.0" layoutY="249.0" mnemonicParsing="false" onAction="#launchApp" prefHeight="30.0" prefWidth="150.0" text="Start server app">
            <font>
                <Font size="16.0" />
            </font>
        </Button>
        <Label layoutX="14.0" layoutY="14.0" prefHeight="20.0" prefWidth="372.0" text="Hostname:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="hostnameField" layoutX="14.0" layoutY="37.0" prefHeight="26.0" prefWidth="372.0"/>
        <Label layoutX="14.0" layoutY="67.0" prefHeight="20.0" prefWidth="372.0" text="Port:">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="portField" layoutX="14.0" layoutY="90.0" prefHeight="26.0" prefWidth="372.0"/>
        <Label alignment="CENTER" layoutX="14.0" layoutY="149.0" prefHeight="49.0" prefWidth="372.0" text="Enter a postname and a port to start the server." textAlignment="CENTER" wrapText="true">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
