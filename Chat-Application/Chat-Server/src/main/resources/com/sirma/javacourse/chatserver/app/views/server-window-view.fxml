<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sirma.javacourse.chatserver.controllers.ServerWindowController">
   <TextArea fx:id="serverTextArea" editable="false" layoutX="14.0" layoutY="14.0" prefHeight="373.0" prefWidth="371.0" wrapText="true" />
   <Button fx:id="startButton" layoutX="454.0" layoutY="120.0" mnemonicParsing="false" onAction="#startServerOnClick" prefHeight="50.0" prefWidth="80.0" text="Start server" />
   <Button fx:id="stopButton" layoutX="454.0" layoutY="300.0" mnemonicParsing="false" onAction="#stopServerOnClick" prefHeight="50.0" prefWidth="80.0" text="Stop server" />
   <SplitMenuButton fx:id="languageChooser" layoutX="455.0" layoutY="14.0" mnemonicParsing="false" text="English">
     <items>
       <MenuItem mnemonicParsing="false" onAction="#setToEnglish" text="English" />
       <MenuItem mnemonicParsing="false" onAction="#setToBulgarian" text="Български" />
     </items>
   </SplitMenuButton>
</AnchorPane>
